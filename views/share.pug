doctype html
html(lang="en")
  head
    title Automatic Location
    meta(http-equiv="content-type" content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible" content="chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    link(rel="stylesheet" type="text/css" href="/css/mapbox/style.css")
    link(rel="stylesheet" type="text/css" href="/css/style.css" media="screen")

  body
    .main-header
      .wrapper
        a.automatic-logo(href="http://automatic.com")
        .location-title
          .plus +
          span Location
    if shareId
      .map-wrapper
        #map.map
        #alert.alert
    else
      .well.text-center
        h2 Expired Share URL


    script.
      var mapboxAccessToken = '#{mapboxAccessToken}';
      var shareId = '#{shareId}';

    script(src="/dest/share.js")
